
<p id="notice"><%= notice %></p>

<h1>Motocycles</h1>

<table>
  <table class="table table-responsive table-hover">
  <thead>
    <tr>
      <th>Brand</th>
      <th>Model</th>
      <th>Year</th>
      <th>Capacity</th>
      <th>Horsepower</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @motocycles.each do |motocycle| %>
      <tr>
        <td><%= motocycle.Brand %></td>
        <td><%= motocycle.Model %></td>
        <td><%= motocycle.Year %></td>
        <td><%= motocycle.Capacity %></td>
        <td><%= motocycle.Horsepower %></td>
        
        <td><%= link_to 'Show', motocycle %></td>
         <% if user_signed_in? %>
        <td><%= link_to 'Edit', edit_motocycle_path(motocycle) %></td>
       
        <td><%= link_to 'Destroy', motocycle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% else  %>
	<td>Please log in to update and delete <td>
<% end %>

      </tr>
    <% end %>
  </tbody>
  
</table>
<center>
  <%= will_paginate @motocycles %>
  
</center>


<br>

<%= link_to 'New Motocycle', new_motocycle_path %>

